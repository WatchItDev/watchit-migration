{
	email info@watchit.movie
    debug
}



(logging) {
	log {
		output file /var/log/caddy.log
		format json
	}
}


gw.watchit.movie {

    @get  {
        method GET
    }
    
    import logging
    encode gzip

    handle_path /ipfs/* {
        reverse_proxy @get locahost:8080
    }

    handle_path {
        respond "Welcome to watchit gateway"
    }


    
}